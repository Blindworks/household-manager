<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="20260206-0001" author="household-manager">
        <comment>Initial database schema setup for Household Manager</comment>

        <!-- Create initial table for application metadata -->
        <createTable tableName="application_info">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="app_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Insert initial application information -->
        <insert tableName="application_info">
            <column name="app_name" value="Household Manager"/>
            <column name="version" value="1.0.0"/>
            <column name="description" value="Backend application for household management and meter readings"/>
        </insert>

        <rollback>
            <dropTable tableName="application_info"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
